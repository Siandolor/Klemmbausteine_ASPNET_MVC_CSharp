@model IEnumerable<Klemmbausteine.Models.Product>

@* ============================================================================
   === File: Index.cshtml
   === Description: Displays a filterable and searchable overview of all products 
   ===              in the Klemmbausteine inventory system. Provides filtering by 
   ===              name, category, stock status, and price range. Links to the 
   ===              product detail view and creation form.
   ============================================================================ *@

@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>

@* --- Filter form for product search and categorization --- *@
<form method="get" class="row g-2 mb-4">
    <div class="col-md-3">
        <input type="text" name="search" class="form-control" placeholder="Search..." value="@Context.Request.Query["search"]" />
    </div>

    <div class="col-md-2">
        <select name="category" class="form-select">
            <option value="">All Categories</option>
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat" selected="@(Context.Request.Query["category"] == cat ? "selected" : null)">
                    @cat
                </option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <select name="stockFilter" class="form-select">
            <option value="">All Stock Levels</option>
            <option value="0" selected="@(Context.Request.Query["stockFilter"] == "0" ? "selected" : null)">Out of Stock</option>
            <option value="1" selected="@(Context.Request.Query["stockFilter"] == "1" ? "selected" : null)">In Stock</option>
        </select>
    </div>

    <div class="col-md-2">
        <input type="number" name="minPrice" class="form-control" step="0.01" placeholder="Min (€)" value="@Context.Request.Query["minPrice"]" />
    </div>

    <div class="col-md-2">
        <input type="number" name="maxPrice" class="form-control" step="0.01" placeholder="Max (€)" value="@Context.Request.Query["maxPrice"]" />
    </div>

    <div class="col-md-1">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

@* --- Product overview table --- *@
<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price (€)</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Category</td>
                    <td>@item.NettoPrice.ToString("N2")</td>
                    <td>@item.InStock.ToString("N0")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No products found.</td>
            </tr>
        }
    </tbody>
</table>

@* --- Navigation link to add a new product --- *@
<a asp-action="Create" class="btn btn-success mt-3">Add New Product</a>

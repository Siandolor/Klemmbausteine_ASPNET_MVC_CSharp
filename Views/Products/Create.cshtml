@model Klemmbausteine.Models.Product

@* ============================================================================
   === File: Create.cshtml
   === Description: View for creating a new Product entry in the Klemmbausteine 
   ===              inventory management system. Contains a form with validation 
   ===              for product details such as name, description, price, and category.
   ============================================================================ *@

@{
    ViewData["Title"] = "Create New Product";
}

<h1>@ViewData["Title"]</h1>

<h4>New Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* --- Form to create a new product --- *@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* --- Input: Product Name --- *@
            <div class="form-group">
                <label asp-for="Name" class="control-label">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @* --- Input: Product Description --- *@
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @* --- Input: Net Price --- *@
            <div class="form-group">
                <label asp-for="NettoPrice" class="control-label">Net Price</label>
                <input asp-for="NettoPrice" class="form-control" />
                <span asp-validation-for="NettoPrice" class="text-danger"></span>
            </div>

            @* --- Input: Product Category --- *@
            <div class="form-group">
                <label asp-for="Category" class="control-label">Category</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            @* --- Hidden Input: Initial Stock Count --- *@
            <div class="form-group d-none">
                <label asp-for="InStock" class="control-label">Stock Quantity</label>
                <input asp-for="InStock" class="form-control" />
                <span asp-validation-for="InStock" class="text-danger"></span>
            </div>

            @* --- Input: Optional Product Image URL --- *@
            <div class="form-group">
                <label asp-for="ImageLink" class="control-label">Product Image URL</label>
                <input asp-for="ImageLink" class="form-control" />
                <span asp-validation-for="ImageLink" class="text-danger"></span>
                <p class="mt-0 mb-0"><i class="small">Please provide a valid URL or leave empty if not applicable.</i></p>
            </div>

            @* --- Submit Button --- *@
            <div class="form-group mt-2">
                <input type="submit" value="Create Product" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Product Overview</a>
</div>

@section Scripts {
    @* --- Loads client-side validation scripts --- *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
